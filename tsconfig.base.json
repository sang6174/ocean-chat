{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@ocean-chat/auth": ["./packages/auth/src"],
      "@ocean-chat/db": ["./packages/db/src"],
      "@ocean-chat/shared-types": ["./packages/shared-types/src"],
      "@ocean-chat/utils": ["./packages/utils/src"]
    }
  }
}